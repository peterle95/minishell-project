NAME = minishell

SRCS = $(wildcard sources/*.c)

OBJS = ${SRCS:.c=.o}

CC = cc 
CFLAGS = -g -Wall -Wextra -Werror -I/usr/local/opt/readline/include
LDFLAGS = -L/usr/local/opt/readline/lib -lreadline -lhistory
INC		=	-Iincludes\
			-I$(LIBFT_PATH)\

LIBFT_PATH	= libft/
LIBFT_NAME	= libft.a 
LIBFT		= $(LIBFT_PATH)$(LIBFT_NAME)

RM = rm -rf

all: $(NAME)

$(NAME): $(LIBFT) $(OBJS)
	$(CC) $(LDFLAGS) $(CFLAGS) $(INC) $(OBJS) $(LIBFT) -o $(NAME)

$(LIBFT):
	@if [ ! -f "$(LIBFT)" ]; then \
		$(MAKE) -C $(LIBFT_PATH); \
	fi

clean:
		@$(RM) $(OBJS) $(LIBFT_PATH)/*.o

fclean: clean
		@${RM} ${NAME} $(LIBFT)

re: fclean all

.PHONY: all clean re
